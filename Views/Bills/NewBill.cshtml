@model RetoFactus.Models.ViewModels.CreateBillViewModel
@{
    ViewData["Title"] = "CreateBill";
}
<h1>CREAR FACTURA</h1>
<div class="row">
    <div class="col">
        <form class="container mt-4 bg-light p-2" asp-controller="CreateBills" asp-action="Prueba" method="post">
            <div class=" row">
                <div class="col">
                    <select asp-for="detailBillModel.numbering_range_id" class="form-select p-2 mb-3" id="selectedRangeId">
                        <option selected disabled>Seleccione el tipo de factura</option>
                        @foreach (var item in Model.numberRangeResponse.data.data)
                        {
                            <option value="@item.id">@item.prefix - @item.document</option>
                        }
                    </select>
                    <select asp-for="detailBillModel.payment_form" class="form-select mb-1">
                        <option selected disabled>Seleccione la forma de pago</option>
                        <option value="1">Pago de contado</option>
                    </select>
                    <select class="form-select" asp-for="detailBillModel.payment_method_code" id="paymentMethod" required>
                        <option selected disabled>Seleccione el tipo de pago</option>
                        <option value="10">Efectivo</option>
                        <option value="42">Consignación</option>
                        <option value="20">Cheque</option>
                        <option value="47">Transferencia</option>
                        <option value="71">Bonos</option>
                        <option value="72">Vales</option>
                        <option value="49">Tarjeta débito</option>
                        <option value="48">Tarjeta crédito</option>
                        <option value="zzz">Otro</option>
                    </select>
                    <div class="form-floating mt-4">
                        <textarea class="form-control" asp-for="detailBillModel.observation" placeholder="Observaciones" id="observation" maxlength="250">Hola mundo.</textarea>
                        <label for="floatingTextarea">Observaciones</label>
                    </div>
                </div>
            </div>
            <div class="card mt-4">
                <div class="card-header bg-light">
                    <h2 class="mb-0">Información del cliente</h2>
                    <label class="form-label mt-4" for="identification">Identificación</label>
                    <select class="form-select" id="legal_organization_id" asp-for="detailBillModel.customer.legal_organization_id" onchange="toggleNameFields()" aria-label="Tipo de persona">
                        <option selected disabled>Tipo de persona / Contribuyente</option>
                        <option value="1">Persona Natural</option>
                        <option value="2">Persona Jurídica</option>
                    </select>
                    <select class="form-select mb-2" id="identification" asp-for="detailBillModel.customer.identification_document_id" aria-label="Default select example">
                        <option selected disabled>Seleccione el tipo de identificación</option>
                        <option value="3">CC - Cedula de ciudadanía </option>
                        <option value="5">CE - Cedula de extrangería </option>
                        <option value="6">NT - NIT </option>
                        <option value="7">PP - Pasaporte </option>
                    </select>
                    <div class="mb-3" id="naturalNameField" style="display: none;">
                        <label class="form-label">Su nombre completo</label>
                        <input type="text" asp-for="detailBillModel.customer.names" class="form-control" placeholder="Ej: Juan Pérez">
                        <label class="mt-2">Digite su numero de identificación</label>
                        <input type="text" class="form-control" id="identification_id" asp-for="detailBillModel.customer.identification" placeholder="12345678910" maxlength="12">
                    </div>
                    <div class="mb-3" id="juridicaNameField" style="display: none;">
                        <label class="form-label">Digite su nombre completo</label>
                        <input type="text" asp-for="detailBillModel.customer.names" class="form-control" placeholder="Ej: Juan Pérez">
                        <label class="form-label">Su numero de identificación</label>
                        <input type="number" asp-for="detailBillModel.customer.dv" class="form-control" placeholder="111111111" maxlength="9">
                    </div>
                    <div class="mb-3 mt-2" id="juridicaNameField" style="display: none;">
                        <label class="form-label">Razón social</label>
                        <input type="text" class="form-control" asp-for="detailBillModel.customer.company" placeholder="Ej: Comercializadora XYZ S.A.S">
                    </div>
                    <label class="form-label">Dirección</label>
                    <input type="text" class="form-control" asp-for="detailBillModel.customer.address" placeholder="Calle 147 # 91-52, Apto 201, Suba, Bogotá" required />
                    <label class="form-label">Correo electrónico</label>
                    <input type="email" class="form-control" asp-for="detailBillModel.customer.email" placeholder="cliente@correo.com" required />
                    <label class="form-label">Numero de telefono</label>
                    <input type="number" class="form-control" asp-for="detailBillModel.customer.phone" placeholder="3103000000" required />
                    <div>
                        <label class="form-label">Seleccione su municipio de recidencia</label>
                        <select class="form-select municipio-select" asp-for="detailBillModel.customer.municipality_id" asp-controller="CreateBills" asp-action="Municipalities">
                            @{
                                foreach (var item in Model.municipalitiesModel.data)
                                {
                                    <option value="@item.id">@item.name</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="mt-3">
                        <label>Es responsable de IVA</label>
                        <div class="form-check">
                            <input class="form-check-input" value="18" type="radio" asp-for="detailBillModel.customer.tribute_id">
                            <label class="form-check-label">Si, responsable de IVA</label>
                        </div>
                        <div>
                            <input class="form-check-input" value="21" type="radio" asp-for="detailBillModel.customer.tribute_id" checked>
                            <label class="form-check-label">No, Excento o excluido de IVA</label>
                        </div>
                    </div>
                </div>
                <h3 class="bg-success text-white text-center border border-3 m-3 rounded">INFORMACIÓN DEL PRODUCTO</h3>
                <table id="tableProducts" class="table table-striped table-hover table-bordered text-center" style="display: none;">
                    <thead class="table-dark">
                        <h5>PRODUCTOS AGREGADOS: </h5>
                        <tr>
                            <th scope="col">Producto</th>
                            <th scope="col">Cantidad</th>
                            <th scope="col">Precio unitario</th>
                            <th scope="col">Total</th>
                        </tr>
                    </thead>
                    <tbody id="getProducts">
                        <tr style="display: none;">
                            <td>
                                <button type="button" class="btn btn-danger removeProduct">Eliminar</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
                <select id="product" class="form-select">
                    <option disabled selected>Selecciona un producto</option>
                    <option value="LENTEN01" data-name="lenceria roja" data-price="35000" data-brand="Tentasión">Lenceria roja marca tentación - $35.000</option>
                    <option value="POT02">Potenciadores black power - $12.900</option>
                    <option value="JUG03">Juguetes - $60.900</option>
                </select>
                <input class="form-control" id="amount" type="number" placeholder="Cantidad deseada" min="1" max="10" required />
                <input class="form-control" type="number" value="" placeholder="Digite la cantidad de descuento si lo hay." />
                <button class="btn btn-secondary addProduct mt-2" type="button" onclick="captureProduct()">Agregar</button>
            </div>
            <button type="submit" class="btn btn-primary">Enviar</button>
            <div class="modal" id="productModal" tabindex="-1">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">Registro de producto</h5>
                        </div>
                        <div class="modal-body">
                            <p>Esta a punto de agregar un producto, ¿desea continuar?</p>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                            <button id="capture" type="button" class="btn btn-primary">Agregar</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
<script src="@Url.Content("~/js/add-product.js")"></script>
<script src="@Url.Content("~/js/create-bill.js")"></script>
<script src="@Url.Content("~/js/prueba.js")"></script>

